# see http://www.gnu.org/software/make/manual/make.html for Makefile syntax

include ../../include.mk

CATCH = catch

CATCH_SOURCE = $(CATCH).cpp
CATCH_DEPENDENCY = $(CATCH_SOURCE:.cpp=.$(BUILD_DEPENDENCY_EXTENSION))
CATCH_OBJECT = $(CATCH_SOURCE:.cpp=.$(BUILD_OBJECT_EXTENSION))

TEST_SOURCES = $(call FUNCTION_FIND_FILES,./,test_[a-z_]+\.$(SRC_SOURCE_EXTENSION))
TEST_DEPENDENCIES = $(TEST_SOURCES:.$(SRC_SOURCE_EXTENSION)=.$(BUILD_DEPENDENCY_EXTENSION))
TEST_OBJECTS = $(TEST_SOURCES:.$(SRC_SOURCE_EXTENSION)=.$(BUILD_OBJECT_EXTENSION))

all: run

clean:
	rm -f $(CATCH) $(CATCH_OBJECT) $(CATCH_DEPENDENCY)
	rm -f $(TEST_OBJECTS) $(TEST_DEPENDENCIES)

run: $(CATCH)
	./$(CATCH) --durations yes

$(CATCH): $(CATCH_OBJECT) $(TEST_OBJECTS) $(PATH_TO_BUILD_LIBRARY)
	$(CXX) $(LDFLAGS) $(CATCH_OBJECT) $(TEST_OBJECTS) $(PATH_TO_BUILD_LIBRARY) -o $@ $(LDLIBS)

$(PATH_TO_BUILD_LIBRARY): FORCE
	$(MAKE) -C $(PATH_TO_BUILD_DIRECTORY) -j $(JOBS) $(BUILD_LIBRARY)

.SECONDEXPANSION:

$(CATCH_OBJECT) $(TEST_OBJECTS): %.$(BUILD_OBJECT_EXTENSION): \
%.$(SRC_SOURCE_EXTENSION) \
$$(call FUNCTION_SOLVE_DEPENDENCIES,%.$(BUILD_DEPENDENCY_EXTENSION))

	@ # create a dependency file
	@ $(CXX) -MM $(CXXFLAGS) $(call FUNCTION_DROP_REDUNDANT_SLASHES,$<) | \
		$(call FUNCTION_GET_DEPENDENCY_FILE_FORMATTER,$(SRC_SOURCE_EXTENSION)) > \
		$*.$(BUILD_DEPENDENCY_EXTENSION)

	@ # and compile the object file
	$(CXX) $(CXXFLAGS) $(call FUNCTION_DROP_REDUNDANT_SLASHES,$<) -o $*.$(BUILD_OBJECT_EXTENSION)
